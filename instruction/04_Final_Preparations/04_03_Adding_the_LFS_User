drwxr-xr-x 2 lfs  root  4096 Sep 13 15:46 etc
lrwxrwxrwx 1 root root     7 Sep 13 15:47 lib -> usr/lib
drwxr-xr-x 2 lfs  root  4096 Sep 13 15:50 lib64
drwx------ 2 root root 16384 Sep 13 03:16 lost+found
lrwxrwxrwx 1 root root     8 Sep 13 15:47 sbin -> usr/sbin
drwxrwxrwt 2 root root  4096 Sep 13 15:03 sources
drwxr-xr-x 2 lfs  root  4096 Sep 13 16:01 tools
drwxr-xr-x 5 lfs  root  4096 Sep 13 15:46 usr
drwxr-xr-x 2 lfs  root  4096 Sep 13 15:46 var

root@debian:~# su - lfs
lfs@debian:~$ id
uid=1001(lfs) gid=1001(lfs) groups=1001(lfs)
lfs@debian:~$
```